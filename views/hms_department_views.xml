<odoo>
    <record id="view_hms_department_list" model="ir.ui.view">
        <field name="name">hms.department.list</field>
        <field name="model">hms.department</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"></field>
                <field name="capacity"></field>
                <field name="is_opened"></field>
            </list>
        </field>
    </record>

    <record id="view_hms_department_form" model="ir.ui.view">
        <field name="name">hms.deprtment.form</field>
        <field name="model">hms.department</field>
        <field name="arch" type="xml">
            <form>
                <group string="Department Info">
                    <field name="name"/>
                    <field name="capacity"/>
                    <field name="is_opened"/>
                </group>
                <notebook>
                    <page string="Patients">
                        <field name="patient_ids"/>
                    </page>
                    <page string="Doctors">
                        <field name="doctor_ids"/>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="action_departments" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">hms.department</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>