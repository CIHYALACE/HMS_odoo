<odoo>
    <record id="view_hms_patient_list" model="ir.ui.view">
        <field name="name">hms.patient.list</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <list>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="blood_type"/>
            </list>
        </field>
    </record>

    <record id="view_hms_patient_form" model="ir.ui.view">
        <field name="name">hms.patient.form</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="undetermined,good,fair,serious" nolabel="1" options="{'clickable' : '1'}"/>
                </header>
                <group>
                    <group string="Personal Info">
                        <field name="first_name"/>
                        <field name="last_name"/>
                        <field name="birth_date"/>
                        <field name="address"/>
                        <field name="age"/>
                    </group>
                    <group string="Medical Info">
                        <field name="blood_type"/>
                        <field name="history" invisible="age &lt; 50"/>
                        <field name="cr_ratio" required="1"/>
                        <field name="pcr"/>
                        <field name="image"/>
                    </group>
                    <group string="Other Info">
                        <field name="department_id" domain="[('is_opened','=',True)]"/>
                        <field name="department_capacity"/>
                        <field name="doctor_id" readonly="not department_id"/>
                    </group>
                </group>
                <notebook>
                    <page string="State Logs">
                        <field name="state_log_ids">
                            <list>
                                <field name="description"/>
                            </list>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="action_patients" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hms.patient</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_hms_patient_list"/>
    </record>

</odoo>