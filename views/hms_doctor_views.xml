<odoo>
    <record id="view_hms_doctors_list" model="ir.ui.view">
        <field name="name">hms.doctors.list</field>
        <field name="model">hms.doctor</field>
        <field name="arch" type="xml">
            <list>
                <field name="first_name"></field>
                <field name="last_name"></field>
                <field name="department_id"></field>
            </list>
        </field>
    </record>

    <record id="view_hms_doctor_form" model="ir.ui.view">
        <field name="name">hms.doctor.form</field>
        <field name="model">hms.doctor</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group string="Personal Info">
                        <field name="first_name"></field>
                        <field name="last_name"></field>
                        <field name="image"></field>
                        <field name="department_id"/>
                    </group>
                </group>
                <notebook>
                    <page string="Patients">
                        <field name="patient_ids"/>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="action_doctors" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hms.doctor</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>